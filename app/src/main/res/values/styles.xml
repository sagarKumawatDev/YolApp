    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>




    <style name="tabText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_9sdp</item>

    </style>

    <style name="tabLayoutStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tabImage" parent="AppTheme">
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
    </style>

    <style name="tabSelectImage" parent="AppTheme">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="progressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="materialStyle"   parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorBlack</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
    </style>
    <style name="materialStyleForEditText"   parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="paddingStart">0dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="materialStyleExposedDropdownMenu"   parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorBlack</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
    </style>

